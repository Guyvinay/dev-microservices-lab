<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- To enable auditing -->
    <changeSet id="113" author="vinay.singh">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="AUTH_REVINFO_TABLE"/>
            </not>
        </preConditions>
        <createTable tableName="AUTH_REVINFO_TABLE">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TIMESTAMP" type="BIGINT"/>
            <column name="MODIFIEDBY" type="varchar(150)"/>
        </createTable>
    </changeSet>

    <changeSet id="118" author="vinay.singh" context="dev,prod" labels="feature1,feature2">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_table"/>
            </not>
        </preConditions>
        <createTable tableName="test_table">
            <column name="test_id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="test_column" type="INT"/>
        </createTable>
        <comment>test table created</comment>
    </changeSet>

    <!-- ===================== SPACE ===================== -->
    <changeSet id="001-create-space" author="vinay">

        <createTable tableName="space">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="tenant_id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(500)"/>
            <column name="created_at" type="bigint"/>
            <column name="updated_at" type="bigint"/>
            <column name="created_by" type="varchar(100)"/>
            <column name="updated_by" type="varchar(100)"/>
        </createTable>

        <createIndex tableName="space" indexName="idx_space_tenant">
            <column name="tenant_id"/>
        </createIndex>

    </changeSet>

    <!-- ===================== FIELD DEFINITION ===================== -->

    <changeSet id="002-create-field-definition" author="vinay">

        <createTable tableName="field_definition">

            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="space_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="label" type="varchar(150)">
                <constraints nullable="false"/>
            </column>

            <column name="data_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="ui_json" type="nvarchar"/>

            <column name="validation_json" type="nvarchar"/>

            <column name="status" type="varchar(30)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="bigint"/>
            <column name="updated_at" type="bigint"/>
            <column name="created_by" type="varchar(100)"/>
            <column name="updated_by" type="varchar(100)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="field_definition"
                baseColumnNames="space_id"
                referencedTableName="space"
                referencedColumnNames="id"
                constraintName="fk_field_space"/>

    </changeSet>

    <!-- ===================== FORM ===================== -->

    <changeSet id="003-create-form" author="vinay">

        <createTable tableName="form">

            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="space_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="varchar(500)"/>

            <column name="status" type="varchar(30)"/>

            <column name="created_at" type="bigint"/>
            <column name="updated_at" type="bigint"/>
            <column name="created_by" type="varchar(100)"/>
            <column name="updated_by" type="varchar(100)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="form"
                baseColumnNames="space_id"
                referencedTableName="space"
                referencedColumnNames="id"
                constraintName="fk_form_space"/>
    </changeSet>

    <!-- ===================== FORM FIELD ===================== -->

    <changeSet id="004-create-form-field" author="vinay">

        <createTable tableName="form_field">

            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="form_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="field_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="field_order" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="required_override" type="boolean"/>
            <column name="override_json" type="nvarchar"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="form_field"
                baseColumnNames="form_id"
                referencedTableName="form"
                referencedColumnNames="id"
                constraintName="fk_form_field_form"/>

        <addForeignKeyConstraint
                baseTableName="form_field"
                baseColumnNames="field_id"
                referencedTableName="field_definition"
                referencedColumnNames="id"
                constraintName="fk_form_field_definition"/>
    </changeSet>

</databaseChangeLog>