	<modelVersion>4.0.0</modelVersion>
	<groupId>com.dev.utility</groupId>
	<artifactId>dev-shared-utility</artifactId>
	<version>1.0.1</version>
	<name>dev-utility</name>
	<description>utility project for grpc and DTO</description>
	<properties>
		<java.version>21</java.version>
	</properties>

	<dependencies>
